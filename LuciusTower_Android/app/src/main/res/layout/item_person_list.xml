<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="15dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_avatar_container"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/aiv_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/img_commonui_avatar_sample_1" />

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/atv_person_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/lucius_common_text_color_1"
        android:textSize="14sp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toEndOf="@+id/card_view_avatar_container"
        app:layout_constraintTop_toTopOf="@+id/aiv_person_sex"
        app:layout_constraintBottom_toBottomOf="@+id/aiv_person_sex"
        tools:text="测试" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/aiv_person_sex"
        android:layout_width="21dp"
        android:layout_height="21dp"
        app:srcCompat="@drawable/ic_unknown_filled"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toEndOf="@+id/atv_person_name"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/atv_person_birthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:textColor="#666666"
        app:layout_constraintStart_toStartOf="@+id/atv_person_name"
        app:layout_constraintTop_toBottomOf="@+id/aiv_person_sex"
        android:textSize="12sp"
        tools:text="1911-01-01" />


</androidx.constraintlayout.widget.ConstraintLayout>
